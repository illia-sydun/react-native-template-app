{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "jsx": "react-native",
        "noEmit": true,
        "incremental": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts"
    ]
}
